@model News.Models.LoginViewModel

@{
    var error = TempData["Error"] as string;
    ViewData["Title"] = "Логин";
}

<head>
    <link rel="stylesheet" href="~/css/Account/login-and-register.css" asp-append-version="true" />
</head>

<div class="modal-content">
    <form method="post" asp-anti-forgery="true" asp-action="Login" asp-controller="Account">
        <div class="modal-header">
            <h4>Вход на сайт</h4>

            <div>
                <input class="btn btn-primary" type="submit" value="Войти" area-hidden="true" />
                <button class="btn btn-secondary" data-dismiss="modal" area-hidden="true">Закрыть</button>
            </div>
        </div>

        <div class="modal-body">

            <input type="hidden" asp-for="ReturnUrl" />
            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div>

                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" class=text-danger></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class=text-danger></span>
                </div>

                @if (!String.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger" role="alert">
                        @error;
                    </div>
                }
                
            </div>

        </div>
        
    </form>
</div>


