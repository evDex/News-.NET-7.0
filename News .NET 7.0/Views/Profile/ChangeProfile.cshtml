@model News.Models.ChangeProfileViewModel

<head>
    <link rel="stylesheet" href="~/css/Profile/ChangeProfile.css" asp-append-version="true" />
</head>

@{
    var error = TempData["Error"] as string;
    ViewData["Title"] = "Редактирование профиля";
}

<article>
    <div class="ChangeProfileArticle">
        <div class="ChangeProfileBackground BasicInfo">
            <img id="img-avatar-user" src="@Model.OldAvatarPath" alt="UserAvatar" runat="server"/>
            <span>@User.Identity.Name</span>
        </div>
        <div class="ChangeProfileBackground ChangeProfileContainer">
            <form method="post" asp-controller="Profile" asp-action="ChangeProfile" asp-anti-forgery="true" enctype="multipart/form-data">
                <div>  
                    <div class="form-group">
                        <label asp-for="Email"></label><br />
                        <input type="email" asp-for="Email" />
                        <span asp-validation-for="Email" ></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewAvatarPath"></label><br />
                        <input id="input-avatar-img" type="file" asp-for="NewAvatarPath" />
                        <span asp-validation-for="NewAvatarPath"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OldPassword"></label><br />
                        <input asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword" ></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label><br />
                        <input asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword" ></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword"></label><br />
                        <input asp-for="ConfirmNewPassword" />
                        <span asp-validation-for="ConfirmNewPassword" ></span>
                    </div>
                    <div>
                        <input type="submit" value="Сохранить"/>
                    </div>
                </div>
            </form> 
        </div>
    </div>
</article>
<script charset="utf-8" type="text/javascript" src="~/js/Profile/change.js" asp-append-version="true"></script>
